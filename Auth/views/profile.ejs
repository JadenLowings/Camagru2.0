<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Profile</h1>
            <% include ./partials/messages %>

            <div class="text-center mb-3">

                    <a href="/users/camera" class="btn btn-secondary">Camera</a>
                    <a href="/users/profile" class="btn btn-primary">Profile</a>
                    <a href="/users/dashboard" class="btn btn-secondary">Home</a>
                    <a href="/users/logout" class="btn btn-secondary">Logout</a>
                    <a href="/users/accountimg" class="btn btn-secondary">My Pictures</a>
                
            </div>
            
            <form method="POST">
                <div class="form-group">
                    
                    <label for="username">Username</label>                    
                    <input
                    type="text"
                    id="usernamesolid"
                    name="usernamesolid"
                    class="form-control"
                    placeholder="Username"
                    />
                </div>
                <p>Profile Changes</p>
                <label for="Token">Username</label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    class="form-control"
                    placeholder="Username"
                />
                <label for="Token">Email</label>
                <input
                    type="text"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Email"
                />
                <label for="Token">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Password"
                />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update account</button>
            </form>
        </div>
    </div>
</div>